<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4Admin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center_horizontal" />


        <TextView
            android:id="@+id/textView16"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/fnameAdmin"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textColorHighlight="#E092ED"
            android:textColorHint="#353434"
            android:background="@color/white" />

        <TextView
            android:id="@+id/textView17Admin"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/lnameAdmin"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@color/white" />

        <TextView
            android:id="@+id/textView18Admin"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/emailIdAdmin"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textColorHighlight="#E092ED"
            android:textColorHint="#353434"
            android:background="@color/white" />

        <TextView
            android:id="@+id/textView19Admin"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/pwdAdmin"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:inputType="textPassword"
            android:textColorHighlight="#E092ED"
            android:textColorHint="#353434"
            android:background="@color/white" />

        <TextView
            android:id="@+id/textView20Admin"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Phone No"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/phoneAdmin"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:inputType="phone"
            android:background="@color/white" />

        <Button
            android:id="@+id/signinbtnAdmin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_weight="1"
            android:text="Sign Up"
            android:textColor="#FBF8F8"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#a7cd3a"
            app:cornerRadius="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_gravity="center" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Already have an account?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/signintxtAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text=" Sign in here"
                android:textAllCaps="false"
                android:textColor="#a7cd3a"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>